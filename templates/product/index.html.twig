{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="container"><br>
    <h1>Produits</h1><br>
{% include 'layouts/flash_message.html.twig' %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td>
                    {% if product.stock > 0 %}
                        {{ product.stock }}
                    {% else %}
                    <p class="text-danger">Stock epuis√©</p>
                    {% endif %}

                </td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                    <a class="btn btn-outline-warning" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                    <a class="btn btn-outline-secondary" href="{{ path('app_product_stock_add',{'id':product.id}) }}">Ajouter Stock</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_product_new') }}">Ajouter produit</a>
    </div>
{% endblock %}
