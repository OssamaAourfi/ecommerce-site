{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <div class="container">
        <h1>Categories</h1><br>
{% include 'layouts/flash_message.html.twig' %}
<table class="table table-striped table-hover table-condensed">
    <tr>
        <th>id</th>
        <th>name</th>
        <th>actions</th>
    </tr>
   {% for category in categories %}
       <tr>
           <td>{{category.id}}</td>
           <td>{{category.name}}</td>
           <td>
               <a class="btn btn-outline-warning" href="{{  path("category_edit",{'id':category.id})}}" >Modifier</a>
               <a onclick="return confirm('coulez vous supprimer cette categorie')" class="btn btn-outline-danger" href="{{  path("category_delete",{'id':category.id})}}" class="text-danger">Supprimer</a>
           </td>
       </tr>
       {% else %}
       <h2>Acune Category a afficher</h2>
    {% endfor %}
</table>
        <a class="btn btn-primary" href="{{ path('category_new') }}">Ajouter une Categorie</a>
    </div>
{% endblock %}
