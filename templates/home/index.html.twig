{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container">
    <h1>Products</h1>
    <div class="row">
    {% for product in products %}
        <div class="col-md-4 mt-3">
        <div class="card" style="width: 18rem;">
            <img src="{{ asset('uploads/images/'~product.image) }}" class="card-img-top" alt="...">
            <div class="card-body">
               <a style="text-decoration: none;color: green" href="{{ path('app_home_product_show',{'id':product.id}) }}"><h5 class="card-title">{{ product.name }}</h5></a>
                <p class="card-text">{{ product.description | slice(0,50)}}</p>
                <h3>{{ product.price }} Dh</h3>
                <a href="{{ path('app_cart_new',{'id':product.id}) }}" class="btn btn-outline-success">Ajouter au panier</a>
            </div>
        </div>
    </div>
    {% endfor %}
    </div><br><br>
    {{ knp_pagination_render(products,'layouts/pagination.html.twig') }}
</div>
{% endblock %}
